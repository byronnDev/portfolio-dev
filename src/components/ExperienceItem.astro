---
import ArrowIcon from "../icons/ArrowIcon.astro";

export interface ExperienceItemProps {
    title: string;
    description: string;
    date: string;
    link: string;
    isFirst?: boolean;
}

const { title, description, date, link, isFirst } =
    Astro.props as ExperienceItemProps;
---

<div
    class="absolute w-3 h-3 bg-zinc-300 rounded-full mt-1.5 -start-1.5 border dark:border-zinc-900 dark:bg-zinc-700"
>
</div>
<span
    class={`${isFirst ? "text-xl font-bold text-zinc-800 dark:text-zinc-200" : ""} mb-1 text-sm font-normal leading-none text-zinc-400 dark:text-zinc-500`}
>
    {date}
</span>
<h3 class="text-lg font-semibold text-zinc-900 dark:text-white">
    {title}
</h3>
<p
    class="mb-4 text-base font-normal text-zinc-500 dark:text-zinc-400 text-pretty"
>
    {description}
</p>
{
    link && (
        <a
            href={link}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 text-sm font-medium text-zinc-900 bg-white border border-zinc-200 rounded-lg hover:bg-zinc-100  focus:z-10 focus:ring-4 focus:outline-none focus:ring-zinc-100 dark:bg-zinc-800 dark:text-zinc-400 dark:border-zinc-600 dark:hover:text-white dark:hover:bg-zinc-700 dark:focus:ring-zinc-700"
        >
            Más información
            <ArrowIcon />
        </a>
    )
}
